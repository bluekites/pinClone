<body class="body-form">
  
  
  <p id="notice"><%= notice %></p>
  
  <%= link_to 'Back', pins_path %>
  
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading center">
          <%= image_tag @pin.image.url(:medium) %>
        </div>
    
  
        <div class="panel-body">  
          <p><strong>Description:</strong>
          <%= @pin.description %></p>
          <p><strong><%= @pin.user.email if @pin.user %></strong></p>
          <% if @pin.user == current_user %><!-- need @ sign for the pin because it is not defined here -->
          <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit'), edit_pin_path(@pin) %> 
          <% end %>
        </div>
      </div>
    </div>  
  </div>
</body>